# ==================================
# META ADS API CONFIGURATION
# ==================================
# Obtenha em: https://developers.facebook.com/apps/
META_APP_ID=your_app_id_here
META_APP_SECRET=your_app_secret_here
META_ACCESS_TOKEN=your_access_token_here

# Versão da API (recomendado: v18.0 ou mais recente)
META_API_VERSION=v18.0

# ==================================
# DATABASE CONFIGURATION
# ==================================
# PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/traffic_dashboard

# SQLite (alternativa para desenvolvimento local)
# DATABASE_URL=sqlite:///./traffic_dashboard.db

# ==================================
# REDIS CONFIGURATION
# ==================================
REDIS_URL=redis://localhost:6379/0

# ==================================
# APPLICATION SETTINGS
# ==================================
# Gerar com: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-this-in-production

# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode
DEBUG=True

# Allowed hosts (separados por vírgula)
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS origins (separados por vírgula)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ==================================
# SERVER CONFIGURATION
# ==================================
HOST=0.0.0.0
PORT=8000

# ==================================
# CELERY CONFIGURATION
# ==================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ==================================
# SYNC SETTINGS
# ==================================
# Intervalo de sincronização automática (em minutos)
AUTO_SYNC_INTERVAL=30

# Período padrão de dados (em dias)
DEFAULT_DATA_RANGE=30

# ==================================
# LOGGING
# ==================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ==================================
# SECURITY
# ==================================
# JWT Token expiration (em minutos)
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Session timeout (em horas)
SESSION_TIMEOUT_HOURS=24
